{
  "name": "markdown-react-js",
  "version": "0.3.0",
  "description": "Markdown to React Component converter",
  "main": "lib/index.js",
  "scripts": {
    "test": "NODE_ENV=test babel-node ./node_modules/.bin/isparta cover _mocha --reporter spec --timeout 3000",
    "test:dev": "NODE_ENV=test mocha --compilers js:babel-core/register --recursive --reporter spec --timeout 3000 --watch",
    "codecov": "cat coverage/lcov.info | codecov",
    "dist": "NODE_ENV=production webpack -p",
    "build": "babel src --out-dir lib",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run build && npm run dist",
    "preversion": "npm test",
    "version": "npm run build && npm run dist && git add -A .",
    "postversion": "git push && git push --tags"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "dependencies": {
    "lodash": "^4.2.1",
    "markdown-it": "^4.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^5.0.0-beta10",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.2.1",
    "eslint-plugin-react": "^3.16.1",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^4.0.0",
    "json-loader": "^0.5.1",
    "markdown-it-abbr": "^1.0.0",
    "markdown-it-container": "^1.0.0",
    "markdown-it-deflist": "^1.0.0",
    "markdown-it-emoji": "^1.0.0",
    "markdown-it-footnote": "^1.0.0",
    "markdown-it-ins": "^1.0.0",
    "markdown-it-mark": "^1.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "mocha": "^2.4.5",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "webpack": "^1.8.11"
  },
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexkuz/markdown-react-js"
  },
  "keywords": [
    "markdown",
    "react"
  ],
  "author": "Alexander <alexkuz@gmail.com> (http://kuzya.org/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexkuz/markdown-react-js/issues"
  },
  "homepage": "https://github.com/alexkuz/markdown-react-js"
}
